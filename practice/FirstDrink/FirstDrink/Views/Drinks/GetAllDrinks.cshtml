@model List<FirstDrink.Models.Drink>
@{
    ViewBag.Title = "GetAllDrinks";
}

<h2>Drinks</h2>

<ul>
    @{ 
        int i = 0;
        foreach (var c in Model)
        {
            <li>
                <h4>
                    <img src="@c.img" style="width:140px; height:140px" />
                    @Html.ActionLink(c.name, "ShowDrink", new { id = i }) | 
                    @Html.ActionLink("Edit", "EditDrink", new { id = i }) |
                    @Html.ActionLink("Delete", "DeleteDrink", new { id = i })
                </h4>
            </li>
            i++;
        }
    }
</ul>