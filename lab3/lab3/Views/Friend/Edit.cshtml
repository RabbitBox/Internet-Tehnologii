@model lab3.Models.FriendModel

@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Friend", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.imgURL)
        @Html.TextBoxFor(m => m.imgURL, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.imgURL)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Friend_id)
        @Html.TextBoxFor(m => m.Friend_id, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Friend_id)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.name)
        @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.place)
        @Html.TextBoxFor(m => m.place, new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
    <a type="submit" class="btn btn-primary" href="/Friend/ShowAllFriends">Back</a>

}

